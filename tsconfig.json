{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2021.String"
        ],
        "module": "commonjs",
        "outDir": "js",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.js"
    ]
}